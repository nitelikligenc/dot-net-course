@model SignInViewModel

@{
	Layout = null;
	ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
	<title>Weblog a Blogging Category Bootstrap responsive WebTemplate | Blog2 :: w3layouts</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="utf-8">
	<meta name="keywords" content="Weblog a Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, 
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<link href="~/template/css/bootstrap.css" rel='stylesheet' type='text/css' />
	<link rel="stylesheet" href="~/template/css/single.css">
	<link href="~/template/css/style.css" rel='stylesheet' type='text/css' />
	<link href="~/template/css/fontawesome-all.css" rel="stylesheet">
	<link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
	    rel="stylesheet">
</head>

<body>
	<!--/banner-->
@* @{ await Html.RenderPartialAsync("BreadCrumb");} *@
<!--//banner-->

<!--/main-->

<div class="container">
	<h3 class="tittle">Sign In Now</h3>
	<div class="row inner-sec">
		<div class="login p-5 bg-light mx-auto mw-100">
			<form asp-controller="Auth" asp-action="Login" method="post">
				<div class="form-group">
					<label for="exampleInputEmail1 mb-2">Email address</label>
					<input asp-for="Email" type="text" class="form-control" id="email" placeholder="Email">
					<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
				</div>
			<div class="form-group">
				<label for="exampleInputPassword1 mb-2">Password</label>
				<input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
			</div>
			<span asp-validation-for="Password" class="alert-danger"></span>
				<div class="form-check mb-2">
					<input type="checkbox" class="form-check-input" id="exampleCheck1">
					<label class="form-check-label" for="exampleCheck1">Check me out</label>
				</div>
				<button type="submit" class="btn btn-primary submit mb-4">Sign In</button>
				<p><a href="Register"> Don't have an account?</a></p>
			</form>
		</div>
	</div>
</div>
	<!--//main-->

	<!-- js -->
	<script src="~/template/js/jquery-2.2.3.min.js"></script>
	<!-- //js -->
	<!--/ start-smoth-scrolling -->
	<script src="~/template/js/move-top.js"></script>
	<script src="~/template/js/easing.js"></script>
	<script>
		jQuery(document).ready(function ($) {
			$(".scroll").click(function (event) {
				event.preventDefault();
				$('html,body').animate({
					scrollTop: $(this.hash).offset().top
				}, 900);
			});
		});
	</script>
	<!--// end-smoth-scrolling -->

	<script>
		$(document).ready(function () {
			/*
									var defaults = {
							  			containerID: 'toTop', // fading element id
										containerHoverID: 'toTopHover', // fading element hover id
										scrollSpeed: 1200,
										easingType: 'linear' 
							 		};
									*/

			$().UItoTop({
				easingType: 'easeOutQuart'
			});

		});
	</script>
	<a href="#home" class="scroll" id="toTop" style="display: block;">
		<span id="toTopHover" style="opacity: 1;"> </span>
	</a>

	<!-- //Custom-JavaScript-File-Links -->
	<script src="~/template/js/bootstrap.js"></script>


</body>

</html>