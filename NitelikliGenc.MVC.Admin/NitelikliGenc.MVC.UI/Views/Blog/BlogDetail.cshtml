@model NitelikliGenc.MVC.Entities.Entities.Blog		

<div class="container">
			<h3 class="tittle">Blog Detay</h3>
			<div class="row inner-sec">
				<!--left-->
			<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
<div class="blog-grid-top">
						<div class="b-grid-top">
							<div class="blog_info_left_grid">
								<img src="https://localhost:7082/images/@Model.ImageUrl" class="img-fluid" alt="">
							</div>
							<div class="blog-info-middle">
								<ul>
									<li>
										<a href="#">
											<i class="far fa-calendar-alt"></i> @Convert.ToDateTime(Model.CreatedAt).ToString("dd/MM/yyyy")</a>
									</li>
									@* <li class="mx-2"> *@
									@* 	<a href="#"> *@
									@* 		<i class="far fa-thumbs-up"></i> 201 Likes</a> *@
									@* </li> *@
									<li>
										<a href="#">
											<i class="far fa-comment"></i> @ViewBag.CommentCount</a>
									</li>
									
								</ul>
							</div>
						</div>

						<h3>
							@Model.Title
						</h3>
	<p>@Model.Content</p>
	</div>
				@await Component.InvokeAsync("CommentList", new { id = ViewBag.blogId })
				@await Component.InvokeAsync("CommentAdd", new  { id = ViewBag.blogId })
				</div>
				<!--//left-->
				<!--right-->
				@{ await Html.RenderPartialAsync("_AsidePartial");}
				<!--//right-->
				</div>
			</div>					