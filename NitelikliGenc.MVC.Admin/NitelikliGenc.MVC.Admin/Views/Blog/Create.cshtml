@model NitelikliGenc.MVC.Admin.Models.ViewModels.Blog.BlogCreateViewModel
@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Blog Ekle</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-controller="Blog" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label for="category">Kategoriler</label>
                    <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-control">
                        <option value="">Seçiniz</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="title">Blog Başlığı</label>
                    <input asp-for="Title" type="text" class="form-control" id="title" placeholder="Blog başlığı">
                </div>
                <div class="form-group">
                    <label for="content">İçerik</label>
                    <textarea class="form-control" asp-for="Content" id="content" cols="20" rows="5" placeholder="İçerik..."></textarea>
                </div>
                <div class="form-group">
                    <label>Büyük resim</label>
                    <input type="file" asp-for="ImageFile" class="form-control-file" />
                </div>
                @* <div class="form-group"> *@
                @*     <label>Küçük resim</label> *@
                @*     <input type="file" asp-for="ThumbnailImageUrl" class="form-control-file" /> *@
                @* </div> *@
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <a type="button" href="@Url.Action("Index")" class="btn btn-primary">Geri</a>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </div>
        </form>
    </div>
    <!-- /.card -->
</div>

