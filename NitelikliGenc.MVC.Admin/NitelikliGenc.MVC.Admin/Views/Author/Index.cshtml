@using NitelikliGenc.MVC.Entities.Entities
@model IEnumerable<Author?>

<div class="col-12 mb-3">
  <div class="d-flex justify-content-between align-items-center pt-3">
    <h3 class="card-title font-weight-bold">Yazarlar</h3>
    <a href="@Url.Action("Create", "Author")" class="btn btn-success">Ekle</a>
  </div>
</div>
<div class="col-12">
  <div class="card">
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0">
      <table id="blogTable" class="table table-hover text-nowrap">
        <thead>
        <tr>
          <th>ID</th>
          <th>Full name</th>
          <th>Email</th>
          <th>Telefon numarası</th>
          <th>Cinsiyet</th>
          <th>Hakkında</th>
          <th>Oluşturulma Tarihi</th>
          <th style="width: 20%; text-align: center">İşlemler</th>
        </tr>
        </thead>
        <tbody>
        @{
          foreach (var item in Model)
          {
            <tr>
              <td>@item.Id</td>
              <td>@item.FullName</td>
              <td>@item.Email</td>
              <td>@item.Phone</td>
              <td>@item.Gender</td>
              <td>@item.About</td>
              <td>@item.CreatedAt</td>
              <td class="project-actions text-right">
                <a href="@Url.Action("", "Author", new {id = item.Id})" class="btn btn-primary btn-sm">
                  <i class="fas fa-folder"></i>Detay
                </a>
                <a class="btn btn-info btn-sm" href="@Url.Action("", "Author", new {id = item.Id})">
                  <i class="fas fa-pencil-alt"></i>Düzenle
                </a>
                <button type="submit" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#delete-modal">
                  <i class="fas fa-trash"></i>Sil
                  </button>
              </td>
            </tr>
          }
        }
        </tbody>
      </table>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
</div>


